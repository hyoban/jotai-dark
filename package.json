{
  "name": "jotai-dark",
  "type": "module",
  "version": "0.2.4",
  "packageManager": "pnpm@8.15.4",
  "description": "A J≈çtai utility package for toggling dark mode",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/jotai-dark#readme",
  "repository": "hyoban/jotai-dark",
  "bugs": "https://github.com/hyoban/jotai-dark/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test && pnpm knip && pnpm build && pnpm publint",
    "dev": "tsup --watch src",
    "knip": "knip",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm check",
    "publint": "publint",
    "start": "tsx src/index.ts",
    "test": "playwright test -c playwright-ct.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "foxact": "^0.2.33",
    "jotai": ">=2.5.0",
    "jotai-effect": "*",
    "react": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "foxact": {
      "optional": true
    },
    "jotai": {
      "optional": true
    },
    "jotai-effect": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.5.5",
    "@playwright/experimental-ct-react": "^1.42.1",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "eslint": "^8.57.0",
    "eslint-config-hyoban": "^0.1.28",
    "eslint-plugin-react-hooks": "^4.6.0",
    "foxact": "^0.2.33",
    "jotai": "^2.7.0",
    "knip": "^5.0.3",
    "lint-staged": "^15.2.2",
    "publint": "^0.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^17.1.1",
    "release-it-pnpm": "4.0.0-beta.1",
    "simple-git-hooks": "^2.10.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
