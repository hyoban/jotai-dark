{
  "name": "jotai-dark",
  "type": "module",
  "version": "0.2.4",
  "packageManager": "pnpm@8.14.3",
  "description": "A J≈çtai utility package for toggling dark mode",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/jotai-dark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyoban/jotai-dark.git"
  },
  "bugs": "https://github.com/hyoban/jotai-dark/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test && pnpm knip && pnpm build && pnpm publint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "test": "playwright test -c playwright-ct.config.ts",
    "build": "tsup",
    "publint": "publint",
    "knip": "knip",
    "prepublishOnly": "pnpm check",
    "changelog": "changelogen --output && prettier --write CHANGELOG.md && git add CHANGELOG.md",
    "release": "bumpp --all --execute \"pnpm changelog\" && npm publish",
    "dev": "tsup --watch src",
    "start": "tsx src/index.ts"
  },
  "peerDependencies": {
    "jotai": ">=2.5.0",
    "jotai-effect": "*"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@playwright/experimental-ct-react": "^1.41.1",
    "@types/node": "^20.11.6",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bumpp": "^9.3.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "jotai": "^2.6.3",
    "knip": "^4.2.1",
    "prettier": "^3.2.4",
    "publint": "^0.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
